{
	"name": "hackday-cf-vite-setup",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "pnpm run build && vite preview",
		"deploy": "pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"db:touch": "wrangler d1 execute honc-d1-database --local --command='SELECT 1'",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply honc-d1-database --local",
		"db:migrate:prod": "ENVIRONMENT=production drizzle-kit migrate",
		"db:seed": "tsx worker/seed.ts",
		"db:seed:prod": "ENVIRONMENT=production tsx worker/seed.ts",
		"db:setup": "pnpm run db:touch && pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
		"db:studio": "drizzle-kit studio",
    "worker:dev": "wrangler dev worker/src/index.ts",
    "worker:deploy": "wrangler deploy --minify worker/src/index.ts",
		"worker:format": "biome format --write worker/src",
		"worker:lint": "biome check --write worker/src",
		"worker:test": "vitest run --config worker/vitest.config.ts",
		"worker:test:watch": "vitest --config worker/vitest.config.ts"
	},
	"dependencies": {
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"@fiberplane/hono": "0.5.2",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.43.1",
		"drizzle-zod": "^0.7.1",
		"hono": "^4.7.0",
		"hono-openapi": "^0.4.6",
		"zod": "^3.23.8",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.12.1",
		"@eslint/js": "^9.33.0",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"wrangler": "^4.33.1",
		"@biomejs/biome": "1.9.4",
		"@cloudflare/vitest-pool-workers": "^0.8.31",
		"@cloudflare/workers-types": "^4.20250508.0",
		"@libsql/client": "^0.14.0",
		"drizzle-kit": "^0.31.1",
		"drizzle-seed": "^0.3.1",
		"tsx": "^4.19.2",
		"vitest": "^3.1.4"
	},
	"packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f"
}